<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/txtTitle"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/darker_gray"
        android:text="Login to your account"
        android:textSize="15sp"
        android:padding="5dp"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        />
    <ImageView
        android:id="@+id/img001"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@android:color/holo_blue_light"
        android:layout_below="@+id/txtTitle"
        android:layout_alignParentLeft="true"
        />

    <TextView
        android:id="@+id/txtEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img001"
        android:text="Email"
        android:textSize="15sp"
        android:layout_marginLeft="20dp"
        android:paddingTop="15dp"
        android:textStyle="bold"/>
    <EditText
        android:id="@+id/edit_Email"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/txtEmail"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/edit_text"
        />

    <TextView
        android:id="@+id/txtPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:textSize="15sp"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/edit_Email"
        android:layout_marginTop="30dp"
        android:textStyle="bold"
        />
    <EditText
        android:id="@+id/edit_Password"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/txtPassword"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/edit_text"
        android:layout_marginTop="10dp"/>
    <Button
        android:id="@+id/btn_Login"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_alignLeft="@+id/edit_Password"
        android:layout_alignRight="@+id/edit_Password"
        android:background="@drawable/btn_background"
        android:text="Login"
        android:textSize="15sp"
        android:layout_below="@id/edit_Password"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:id="@+id/txtCreateNew"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New to Twitter? Register Here"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@android:color/holo_blue_dark"
        android:layout_below="@id/btn_Login"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        />
</RelativeLayout>