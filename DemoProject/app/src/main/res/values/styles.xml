<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--Style Base Text View Author & Description-->
    <style name="BaseText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!--Style Author View-->
    <style name="textView_Author" parent="BaseText">
        <item name="android:textStyle">bold</item>
    </style>

    <!--Styte Avatar-->
    <style name="imgView_avatar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentTop">true</item>
    </style>

    <!--Style Description-->
    <style name="textView_Detail" parent="BaseText">
        <item name="android:textStyle">italic</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <!--Style Grid Layout Sample01-->
    <style name="GL_Sample01">
        <item name="android:gravity">center|bottom</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:layout_rowSpan">2</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:layout_gravity">fill</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="GL_Sample02">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_width">0dp</item>
    </style>
</resources>
